<p style="color: green"><%= notice %></p>

<div class="S_startupsSection">

  <%= render @startup %>

  <div class="C_postManage">

       <% if can? :manage, @startup %>
            <p class="p1"><%= link_to "Edit this startup", edit_startup_path(@startup) %></p>
            <div class="p1 button_destroy"><%= button_to "Destroy this startup", startup_path(@startup), method: :delete %></div>
       <% end %>

       <p class="p1"><%= link_to "Back to startups", startups_url %></p>

  </div>

    <div id="C_posts">

        <%= render collection: @posts, partial: "posts/post", locals: { startup: @startup }  %>
    </div>
  </div>
</div class="S_startupssSection">
