<div id="<%= dom_id message %>">
  <p>
    <strong>Text:</strong>
    <%= message.text %>
  </p>

  <p>
    <strong>Author name:</strong>
    <%= message.author_name %>
  </p>

  <p>
    <strong>Chat:</strong>
    <%= message.chat_id %>
  </p>

  <p>
    <strong>User:</strong>
    <%= message.user_id %>
  </p>

</div>
