<% title @post.title %>

<p style="color: green"><%= notice %></p>

<br>

<%= render @post %>

<br>

<div class="buttons_collection">

<% if can? :manage, @post %>
     <%= link_to "Edit this post", edit_post_path(@post) %>
     <%= button_to "Destroy this post", post_path(@post), method: :delete %>
<% end %>

</div>

<br>

<h3>
Комментарии
</h3>



<% if current_user %>

<%= render "comments/form", post: @post, comment: Comment.new %>

<% end %>

<div class="comments_list">
<% @post.comments.no_replies.each do |comment| %>

<%= render "comments/comment", post: @post, comment: comment %>

<% end %>

<%= link_to "Back to posts", index_url %>
  